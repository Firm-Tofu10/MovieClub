  {{#each reviews as |review|}}
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="post-preview">
          <a class="img-hold" href="/review/{{review.id}}">
            <h2 class="post-title">{{review.title}}</h2>
            <h3 class="post-subtitle">{{review.description}}</h3>
            <img class="movie-img" title="movie-poster"
              src={{review.image}}>
          </a>
          <p class="post-meta">
            Posted by {{reviewer.name}} on {{format_date review.created_at}}
          </p>
          {{!-- {{#if logged_in}} --}}
         <form>
            <div class="card p-3">
              <button type="button" onclick="unHide('show_{{review.id}}')" class="redBtn">Review Movie</button>
              <div id="show_{{review.id}}" class="hideMe">
                <div id="illHide_{{review.id}}" class="stars">
                <button class="greenBtn">Submit</button>
                <input class="textBox" type="text" placeholder="user review">
                <div class="fiveToOne">
                  <input type="radio" id="radioStar_{{review.id}}" name="rate_{{review.id}}" value="1">
                  <label for="radioStar_{{review.id}}"></label>
                  <input type="radio" id="radioStar_{{review.id}}" name="rate_{{review.id}}" value="2">
                  <label for="radioStar_{{review.id}}"></label>
                  <input type="radio" id="radioStar_{{review.id}}" name="rate_{{review.id}}" value="3">
                  <label for="radioStar_{{review.id}}"></label>
                  <input type="radio" id="radioStar_{{review.id}}" name="rate_{{review.id}}" value="4">
                  <label for="radioStar_{{review.id}}"></label>
                  <input type="radio" id="radioStar_{{review.id}}" name="rate_{{review.id}}" value="5">
                  <label for="radioStar_{{review.id}}"></label>
                  <span class="result"></span>
                </div>
                </p>
              </div>
            </div>
        </div>
        </form>
          {{!-- {{/if}} --}}
        </div>
      </div>
    </div>  
  </div>
  <hr>
{{/each}}
