{{!-- View file for the various reviews --}}
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="post-preview">
          <h2 class="post-title">{{title}}</h2>
          <h3 class="post-subtitle">{{description}}</h3>
          <img class="movie-img" title="movie-poster"
            src={{image}}>
          <p class="post-meta">
            Posted by {{reviewer.name}} on {{format_date created_at}}
          </p>
        </div>
          {{#if comments}}
          <div class="comment-box">
            <div class="comment-box-header"><h3>Comments</h3></div>
              {{#each comments as |comment|}}
              <div class="comment-box-item"><h5>{{user.user_name}}</h5></div>
              <div class="comment-item">{{comment.comment_text}}</div>
              {{/each}}
          </div>
          {{/if}}
          {{#if logged_in}}
          <form class="comment-form">
            <div class="comments">
              <section class="comment">
                <div class="text">
                  <textarea id="comment-txt" class="comment-text"></textarea>
                </div>
              </section>
            </div>
            <div class="comment-btn-holder">
              <button type="submit">Add Comment</button>
            </div>
          </form>
          {{/if}}
      </div>
    </div>  
  </div>

</main>

<script src="/js/comment.js"></script>